alias ls='ls --color=auto'
alias dir='ls -l'
alias rm='rm -i'
alias less='less -i -M -R'
alias grep='grep --color=auto'
alias tig='tig --all'
alias df='df -BGB -T -a -x sysfs -x proc -x devtmpfs -x devpts -x tmpfs -x securityfs -x cgroup -x pstore -x mqueue -x debugfs -x hugetlbfs -x binfmt_misc -x rootfs -x configfs -x fusectl | grep -v systemd-1'
alias du='du -hs'
alias pvdisplay='pvdisplay --units G'
alias vgdisplay='vgdisplay --units G'
alias lvdisplay='lvdisplay --units G'
alias dmesg='dmesg -T'
alias root='sudo -i'
alias dvgrab='dvgrab --autosplit --format dv2 --timestamp --size 2048 --opendml'

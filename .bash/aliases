alias ls='ls --color=auto'
alias dir='ls -l'
alias rm='rm -i'
alias less='less -i -M -R'
alias grep='grep --color=auto'
alias tig='tig --all'
alias df='df -H -T'
alias du='du -BGB -s'
alias vi='vim'
alias msbuild='MSBuild.exe'

# npm needs windows git to install packages from a git repo.
alias npm='PATH="/cygdrive/c/Program Files/Git/cmd:${PATH}" npm'
